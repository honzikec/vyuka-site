---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import LinkButton from '../components/LinkButton.astro';
import ListLink from '../components/ListLink.astro';
---

<Layout title="Příprava dat pro statistické zpracování | Ing. Jan Kaiser">
  <div class="max-w-screen-md py-12 mx-auto px-6">
    <h1
      class="mb-2 block font-sans text-4xl font-semibold leading-[1.3] tracking-normal antialiased text-blue-gray-900 dark:text-white"
    >
      Příprava dat pro statistické zpracování
    </h1>

    <Card title="Prezentace" description="Prezentace ke stažení v PDF.">
      <div slot="footer" class="flex justify-center">
        <LinkButton href="/downloads/prezentace-priprava-dat.pdf" icon="download" target="_blank">
          Stáhnout
        </LinkButton>
      </div>
    </Card>

    <Card title="Microsoft Office">
      <ul class="block font-sans text-base antialiased font-light leading-relaxed text-inherit">
        <ListLink href="https://uvt.cuni.cz/UVT-1011.html">
          Informace o univerzitní licenci Office 365
        </ListLink>
        <ListLink href="https://uvt.cuni.cz/UVT-1086.html">
          Návod instalace Office 365
        </ListLink>
      </ul>
    </Card>

    <Card title="Nástroje pro zpracování dat">
      <ul class="block font-sans text-base antialiased font-light leading-relaxed text-inherit">
        <ListLink href="https://statistica.pro/">
          Statistica
        </ListLink>
        <ListLink href="https://multilicence.lf1.cuni.cz">
          Statistica - stažení
        </ListLink>
        <ListLink href="https://uvt.cuni.cz/UVT-1086.html">
          Excel, Visio (Office 365)
        </ListLink>
        <ListLink href="https://excalidraw.com/">
          ExcaliDraw
        </ListLink>
      </ul>
    </Card>

    <Card title="Návody a další zdroje">
      <ul class="block font-sans text-base antialiased font-light leading-relaxed text-inherit">
        <ListLink href="https://statistica.pro/knowledgebase/">
          Statistica knowledge base
        </ListLink>
        <ListLink href="https://statistica.pro/knowledgebase-cz/instalace-programu-statistica-jednouzivatelska-verze-named-user/">
          Statistica - návod instalace
        </ListLink>
        <ListLink href="https://office.lasakovi.com/excel/">
          Kvalitní návody pro MS Excel
        </ListLink>
        <ListLink href="https://support.microsoft.com/cs-cz/office/p%C5%99ehled-vzorc%C5%AF-v-excelu-ecfdc708-9162-49e8-b993-c311f47ca173">
          Tutoriál na vzorce v Excelu přímo od Microsoftu
        </ListLink>
        <ListLink href="https://www.wikiskripta.eu/w/Popisn%C3%A1_statistika">
          Popisná statistika (WikiSkripta)
        </ListLink>
        <ListLink href="https://www.wikiskripta.eu/w/Fórum:Testy/Pearsonův_korelační_koeficient">
          Korelační koeficient (WikiSkripta)
        </ListLink>
        <ListLink href="https://www.wikiskripta.eu/w/Normální_rozdělení">
          Normální rozdělení (WikiSkripta)
        </ListLink>
      </ul>
    </Card>
  </div>
</Layout>
