---
interface Props {
  href: string;
  icon?: string;
  target?: string;
}

const { href, icon = "link", target = "_blank" } = Astro.props;
---

<li class="my-2">
  <a
    href={href}
    target={target}
    class="inline-flex items-center justify-center p-5 w-full text-base font-medium text-gray-500 dark:text-gray-300 rounded-lg bg-gray-50 hover:text-gray-900 hover:bg-gray-100 dark:bg-slate-600 dark:hover:text-slate-50 dark:hover:bg-slate-500 transition-colors"
  >
    <span class="w-full text-left">
      <slot />
    </span>
    <span class="material-icons ml-2">{icon}</span>
  </a>
</li>
