---
interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<div
  class="relative flex flex-col mt-8 text-gray-700 dark:text-gray-400 bg-white dark:bg-slate-800 shadow-md bg-clip-border rounded-xl"
>
  <div class="p-6">
    {title && (
      <h5 class="block mb-2 font-sans text-xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900 dark:text-white">
        {title}
      </h5>
    )}
    
    {description && (
      <p class="block font-sans text-base antialiased font-light leading-relaxed text-inherit mb-4">
        {description}
      </p>
    )}

    <slot />
  </div>
  
  {Astro.slots.has('footer') && (
    <div class="p-6 pt-0">
      <slot name="footer" />
    </div>
  )}
</div>
